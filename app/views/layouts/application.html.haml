!!! Strict
%html
  %head
    %title= h(yield(:title) || "Allods")
    = csrf_meta_tag
    = stylesheet_link_tag 'compiled/application.css', :media => 'screen, projection'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js"
    = javascript_include_tag :defaults, :jquery_plugins
    = yield(:head)
  %body
    #container
      #top
        = render :partial => 'shared/header'

        #page_infos
          - if show_title?
            %h1= h yield(:title)
          - unless @title.blank?
            %h2.title= @title
          - unless @hint.blank?
            %p.hint= @hint

      #content
        = yield

        = render :partial => 'shared/footer'
