!!! Strict
%html
  %head
    %title= h(yield(:title) || "Devise")
    = csrf_meta_tag
    = stylesheet_link_tag 'compiled/application.css', :media => 'screen, projection'
    /[if IE]
      = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.9/jquery-ui.min.js"
    = javascript_include_tag :defaults, :jquery_plugins
    = yield(:head)
  %body
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String)

      #top
        #header
          #links
            %p.home= link_to t('header.home'), root_path

          #user_login_box
            - if user_signed_in?
              = current_user.email
              |
              = link_to t('header.my_infos'), edit_user_registration_path
              |
              = link_to t('auth.sign_out'), destroy_user_session_path

            - else
              = link_to t('auth.sign_in'), new_user_session_path
              |
              = link_to t('auth.sign_up'), new_user_registration_path

        #page_infos
          - if show_title?
            %h1= h yield(:title)
          - unless @title.blank?
            %h2.title= @title
          - unless @hint.blank?
            %p.hint= @hint

      #content
        = yield
