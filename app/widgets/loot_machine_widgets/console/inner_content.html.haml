- @loot_machine.loot_statuses.each do |loot_status|
  %tr{ :data => { :id => loot_status.id, :machine_id => loot_status.loot_machine.id }, :class => 'loot_status_line' }
    %td.character
      %span.nickname= link_to loot_status.character.nickname, character_path(loot_status.character)
    %td.archetype
      %span= t("characters.archetypes.#{loot_status.character.archetype}") unless loot_status.character.archetype.blank?
    %td.role
      %span= t("characters.roles.#{loot_status.character.role}") unless loot_status.character.role.blank?
    = render_widget "loot_status_line_#{loot_status.id}"
